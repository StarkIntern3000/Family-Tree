public class Person {
    private String name;
    private int age;
    private boolean sex;
    private char gender;
    private int children;
    private Person left;
    private Person right;
    private Person parent;
    private boolean parentCount;
    
    public Person(String n, int a, boolean s, char g ){
        name = n;
        age = a;
        sex = s;
        gender = g;
        children = 0;
        parentCount = false;
    }
    
    public void AttriEditor(String type, String newEntry){
        switch(type){
            case "name":
                name = newEntry;
                break;
            case "age":
                age = Integer.parseInt(newEntry);
                break;
            case "sex":
                sex = Boolean.parseBoolean(newEntry);
                break;
            case "gender":
                gender = newEntry.charAt(0);
                break;
        }
    }
      public void addChild(Person c){
        switch (children){
            case 0:
                left = c;
                break;
            case 1:
                right = c;
                break;
            case 2:
                //insert error for something
                break;
        }
    }
    public void assignParent(Person p){
        if (parent){
            //error
        }
        else {
            parent = p;
            parentCount = true;
        }
        
    }
    public Person returnLeft(){
        return left;
    }
    public Person returnRight(){
        return right;
    }
    public Person returnParent(){
        return parent;
    }
    public String returnName(){
        return name;
    }
    
    public int returnAge(){
        return age;
    }
    
    public boolean returnSex(){
        return sex;
    }
    
    public char returnGender(){
        return gender;
    }
  
}
